@using System.Web.UI.WebControls
@model ZakLyd.Models.SearchViewModel

<div class="row home-search-row">
    <div class="home-search-background"> </div>
    <div class="col-sx-0 col-sm-offset-0 col-md-3 col-lg-2"></div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8 home-search">
        
        @Html.ValidationMessageFor(model => model.IsHajj, "", new {@class = "text-danger"})
        @Html.ValidationMessageFor(model => model.StartDate, "", new {@class = "text-danger"})
        @Html.ValidationMessageFor(model => model.EndDate, "", new {@class = "text-danger"})
        @Html.ValidationMessageFor(model => model.PersonNumber, "", new { @class = "text-danger" })

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.AntiForgeryToken()

            <div class="row search-row search-title" style="text-align: center">
                <h1> Partez faire votre Omra, votre Haj... </h1>
            </div>

            <fieldset>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsHajj, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        <div class="row search-row" style="text-align: center">
                            @Html.CheckBoxFor(model => model.IsHajj, new {htmlAttributes = new {id = "hajjradio", name = "optradio"}})
                        </div>
                    </div>
                </div>
                <div class="row search-row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 search-date">
                        <div class="form-group">
                            <div class='input-group date datepicker'>
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" , PlaceHolder = "Du.." } })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 search-date">
                        <div class="form-group">
                            <div class='input-group date datepicker'>
                                @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Au.." } })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                        @Html.EditorFor(model => model.PersonNumber, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Ex: pour 2 personnes" } })
                    </div>
                </div>
                <div class="row search-row" style="text-align: center">
                    <button type="submit" class="btn btn-dropbox btn-home-search">Rechecher</button>
                </div>

            </fieldset>
        }
    </div>
    <div class="col-sx-0 col-sm-offset-0 col-md-3 col-lg-2"></div>
</div>

<script type="text/javascript">
        $(".datepicker").datepicker({ format: "dd/mm/yyyy", local: "fr" });

        $("#nbPersons").TouchSpin({
            verticalbuttons: true,
            verticalupclass: 'glyphicon glyphicon-plus',
            verticaldownclass: 'glyphicon glyphicon-minus'
        });

        $("#hajjradio").bootstrapSwitch({ onText: "Omra", offText: "Haj", state: true });
</script>

