@{
    ViewBag.Title = "Home Page";

    <div class="row home-search">
        <div class="col-sx-0 col-sm-offset-0 col-md-3 col-lg-2"></div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.ValidationSummary(true);
                <fieldset>
                    <div class="row">
                            <label class="radio-inline"><input type="radio" name="optradio">Hajj</label>
                            <label class="radio-inline"><input type="radio" name="optradio">Omra</label>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 search-date">
                            <div class="form-group">
                                <div class='input-group date datepicker'>
                                    <input id='startDate' type='text' class="form-control " placeholder="Du.." />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 search-date">
                            <div class="form-group">
                                <div class='input-group date datepicker'>
                                    <input id='endDate' type='text' class="form-control" placeholder="Au.." />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-4">
                            <input id="nbPersons" type="text" value="" placeholder="Pour 2 personnes" />
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
                            <button class="btn btn-primary">Rechecher</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
        <div class="col-sx-0 col-sm-offset-0 col-md-3 col-lg-2"></div>
    </div>


    <script type="text/javascript">
        $(".datepicker").datepicker({ format: "dd/mm/yyyy", local: "fr" });

        $("#nbPersons").TouchSpin({
            verticalbuttons: true,
            verticalupclass: 'glyphicon glyphicon-plus',
            verticaldownclass: 'glyphicon glyphicon-minus'
        });
    </script>
}


